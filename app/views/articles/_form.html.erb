<% if @article.errors.any? %>
    <h5>The following errors prevented the article from getting created</h5>
    <ul>
        <% @article.errors.full_messages.each do |message| %>
            <li><%= message %> <br/></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @article do |f| %>

    <p>
        <%= f.label :title %> <br/>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %> <br/>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>

<% end %>