<div class="row row-grid">
    <div class="col-xs-12 col-md-6 offset-md-3">
        <div class="page-title">
            <h3>All Bloggers</h3>
        </div>
    </div>
</div>
<div class="row">
    <div class="col s12">
        <%= will_paginate @user, renderer: MaterializeRenderer %>
    </div>
</div>
<div class="row row-grid">
    <% @users.each do |user| %>
    <div class="col-xs-12 col-md-4 offset-md-4">
        <div class="mdl-card mdl-shadow--2dp" id="user-card">
            <%= link_to gravatar_for(user, size: 1000), user_path(user) %>
            <div class="mdl-card__title mdl-card--expand">
                <h4><strong><i>@<%= user.username %></i></strong></h4>
                <small><stong><%= pluralize(user.articles.count, "article") if user.articles%></stong></small>
                <div class="card-block">
                    <% if logged_in? && current_user.admin? %>
                        <%= link_to "Delete User", user_path(user),
                                method: :delete,
                                data: { confirm: "Are you sure you want to delete this article?" },
                                class: "btn-danger mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-js-ripple-effect" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</div>
<div class="row">
    <div class="col s12">
        <%= will_paginate @user, renderer: MaterializeRenderer %>
    </div>
</div>
